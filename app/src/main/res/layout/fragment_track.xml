<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/track_small_container"
        android:layout_width="match_parent"
        android:name="com.guavaapps.spotlight.TrackSmallFragment"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/playlist_view"
        android:layout_width="128dp"
        android:layout_height="128dp" />

    <ImageView
        android:id="@+id/next_track_view"
        android:layout_width="256dp"
        android:layout_height="256dp" />

    <ImageView
        android:id="@+id/track_view"
        android:layout_width="256dp"
        app:shapeAppearance="?attr/shapeAppearanceMediumComponent"
        android:layout_height="256dp" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/track_large_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.guavaapps.spotlight.TrackLargeFragment"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
