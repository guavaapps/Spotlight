<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!--    <style name="Theme.Spotlight" parent="Theme.Material3.Dark.NoActionBar">-->
    <style name="Theme.Spotlight" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>

        <item name="colorPrimary">#ffffa9ff</item>
        <item name="colorOnPrimary">#ff580065</item>
        <item name="colorPrimaryContainer">#ff761982</item>
        <item name="colorOnPrimaryContainer">#ffffd5fe</item>

<!--        <item name="colorSecondary">#ffff74f9</item>-->
<!--        <item name="colorOnSecondary">#ff380039</item>-->
<!--        <item name="colorSecondaryContainer">#ff511950</item>-->
<!--        <item name="colorOnSecondaryContainer">#fff8aeef</item>-->

        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Spotlight.Ben.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <!--        <item name="android:height">48dp</item>-->
    </style>

    <style name="Theme.Spotlight.Ben.Transparent" parent="Widget.Material3.Button.TextButton">
        <item name="iconSize">24dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:inset">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">48dp</item>
        <!--        <item name="iconTint">#1db954</item>-->
        <!--        iconSize = 18dp-->
    </style>

    <style name="Theme.Spotlight.Ben" parent="Widget.Material3.Button">
        <item name="iconSize">24dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:inset">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Theme.Spotlight.Text.Heading.Mini" parent="Theme.Spotlight.Text">
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Spotlight.Text.Sub" parent="Theme.Spotlight.Text">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Spotlight.Text.Mini" parent="Theme.Spotlight.Text">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="Theme.Spotlight.Text.TrackTitle">
        <item name="android:textSize">24dp</item>
    </style>

    <style name="ButtonGroupCenter" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">6dp</item>
    </style>

    <style name="ButtonGroupLeft" parent="ButtonGroupCenter">
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeBottomLeft">12dp</item>
    </style>

    <style name="ButtonGroupRight" parent="ButtonGroupCenter">
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerSizeBottomRight">12dp</item>
    </style>
</resources>